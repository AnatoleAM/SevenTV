{
	"manifest_version": 2,
	"name": "SevenTV",
	"description": "Third party thing",
	"version": "0.1",
	"page_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	},
	"background": {
		"scripts": [
			"background.js",
			"runtime.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"content.js",
				"runtime.js"
			]
		}
	],
	"web_accessible_resources": [
		"app/content/content.html"
	],
	"permissions": [
		"*://twitch.tv/*",
		"tabs",
        "activeTab",
        "webNavigation"
	]
}
