{
	"compilerOptions": {
		"outDir": "dist/",
		"sourceMap": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES5",
		"jsx": "react",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"src/*": ["./src/*"],
			"@typings/*": ["../shared/typings/*"]
		}
	},

	"include": [
		"src/*",
		"src/**/*"
	]
}