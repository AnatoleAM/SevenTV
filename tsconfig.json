{
	"compilerOptions": {
		"outDir": "dist/",
		"strict": true,
		"sourceMap": true,
		"module": "ESNEXT",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "ES5",
		"jsx": "react",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"paths": {
			"*": ["@types/*.d.ts"],
			"src/*": ["./src/*"],
			"@typings/*": ["../Shared/*", "Typings/*", "node_modules/seventv-typings/*"]
		}
	},

	"include": ["src/*", "src/**/*"]
}
